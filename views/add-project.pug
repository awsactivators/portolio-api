doctype html
html
  head
    title Add Project
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/styles.css")
  body
    div.container.add-container
      h1 Add Project
      form(action="/admin/add-project" method="POST")
        div.mb-3
          label(for="title") Title:
          input.form-control(type="text" name="title" required)

        div.mb-3
          label(for="description") Description:
          textarea.form-control(name="description" required)

        div.mb-3
          label(for="techStack") Tech Stack:
          input.form-control(type="text" name="techStack")

        div.mb-3
          label(for="githubLink") Link:
          input.form-control(type="url" name="githubLink")

        div.mb-3
          label(for="category") Category:
          select.form-control(name="category" required)
            option(value="devops") DevOps
            option(value="software") Software

        button.btn.btn-primary.add-proj(type="submit") Add Project
        a.btn.btn-secondary.btn-cancel(href="/admin") Cancel
