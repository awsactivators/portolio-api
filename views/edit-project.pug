doctype html
html
  head
    title Edit Project
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/styles.css")
  body
    div.container.edit-container
      h1 Edit Project
      form(action="/admin/edit-project/" + project._id method="POST")
        div.mb-3
          label(for="title") Title:
          input.form-control(type="text" name="title" value=project.title required)

        div.mb-3
          label(for="description") Description:
          textarea.form-control(name="description" required)= project.description

        div.mb-3
          label(for="techStack") Tech Stack:
          input.form-control(type="text" name="techStack" value=project.techStack)

        div.mb-3
          label(for="githubLink") Link:
          input.form-control(type="url" name="githubLink" value=project.githubLink)

        button.btn.btn-primary.btn-edit.edit-p(type="submit") Update Project
        a.btn.btn-secondary.btn-cancel(href="/admin") Cancel
