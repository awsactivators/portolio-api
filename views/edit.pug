doctype html
html
  head
    title Edit Project
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/styles.css")
  body
    div.container.admin-container
      h1 Edit Project

      form(action="/admin/edit/" + project._id method="POST")
        div.mb-3
          label(for="title") Project Title:
          input.form-control(type="text" name="title" value=project.title required)

        div.mb-3
          label(for="description") Description:
          textarea.form-control(name="description" required)= project.description

        div.mb-3
          label(for="techStack") Tech Stack:
          input.form-control(type="text" name="techStack" value=project.techStack)

        div.mb-3
          label(for="githubLink") GitHub Link:
          input.form-control(type="url" name="githubLink" value=project.githubLink)

        div.mb-3
          label(for="category") Category:
          select.form-control(name="category" required)
            option(value="devops" selected=(project.category == "devops" ? "selected" : undefined)) DevOps
            option(value="software" selected=(project.category == "software" ? "selected" : undefined)) Software

        button.btn.btn-primary.btn-edit-save(type="submit") Save Changes
        a.btn.btn-secondary(href="/admin") Cancel
