doctype html
html
  head
    title Admin Registration
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/styles.css")
  body
    div.container
      h1 Register Admin

      form(action="/auth/register" method="POST")
        div.mb-3
          label(for="username") Username:
          input.form-control(type="text" name="username" id="username" placeholder="john" required)

        div.mb-3
          label(for="password") Password:
          input.form-control(type="password" name="password" id="password" placeholder="********" required)

        button.btn.btn-success(type="submit") Register

      p. 
        Already have an account? #[a(href="/auth/login") Log in now]
